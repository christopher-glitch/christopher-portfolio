---
interface Props {
	contentTitle: string
}

const { contentTitle } = Astro.props;
---
<div class="flex flex-col justify-center items-center my-10" id={contentTitle}>
	<div class="w-2/3 max-w-2xl">
	<div class="text-left text-2xl md:text-3xl font-PressStart my-20">{contentTitle}</div>
	<div class="card w-auto bg-slate-800 card-shadow mx-5">
		<div class="card-body">
			<slot />
		</div>
	</div>
	</div>
</div>

<style>
	.card-shadow {
		box-shadow: 0 0 40px 10px rgba(190, 190, 190, 0.818);
	}
</style>
