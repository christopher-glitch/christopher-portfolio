---
import ContentLayout from "../layouts/ContentLayout.astro";
import ProjectTemplate from "./ProjectTemplate.astro";
import projects from "../data/projects.json";
---

<ContentLayout contentTitle="Project">
	{
		projects.deploy.map(({title, projectImageSrc, imgStyle, outline, github}) => (
			<ProjectTemplate 
				title={title}
				projectImageSrc={projectImageSrc} 
				imgStyle={imgStyle}
				outline={outline}
				github={github}
			/>
		))
	}
</ContentLayout>
